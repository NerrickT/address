<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!-- Users Entity table is defined in initial.xml -->
        
    <!-- Users -->
        
    <!-- users_facts_username -->
    <changeSet id="1" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="users_facts_username" />
            </not>
        </preConditions>
        
        <createTable tableName="users_facts_username">
            <column name="sequence" type="bigint">
                <constraints primaryKeyName="pk_users_facts_username_sequence"
                             primaryKey="true"
                             foreignKeyName="fk_users_facts_username_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence" />
            </column>
            <column name="user_id" type="bigint">
                <constraints foreignKeyName="fk_users_facts_username_users"
                             referencedTableName="users"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
            <column name="username" type="text">
                <constraints nullable="false" />
            </column>
        </createTable>
        
        <!--
        TODO:
            * index by (user_id, sequence) for fast max(sequence) group by user_id queries (current_users view)?
        -->
        
    </changeSet>

