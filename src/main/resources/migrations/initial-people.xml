<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!-- people -->
    <changeSet id="1" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="people" />
            </not>
        </preConditions>

        <createTable tableName="people">
            <column name="entity_id" type="bigint" autoIncrement="false">
                <constraints primaryKeyName="pk_people"
                             primaryKey="true"
                             foreignKeyName="fk_people_entities"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <!-- people_facts_first_name -->
    <changeSet id="2" author="michael">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="people_facts_first_name" />
            </not>
        </preConditions>

        <createTable tableName="people_facts_first_name">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_people_facts_first_name_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence" />
            </column>
            <column name="entity_id" type="bigint">
                <constraints foreignKeyName="fk_people_facts_first_name_people"
                             referencedTableName="people"
                             referencedColumnNames="entity_id" />
            </column>
            <column name="first_name" type="text">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey tableName="people_facts_first_name" columnNames="sequence,entity_id" constraintName="pk_people_facts_first_name" />
    </changeSet>

    <!-- people_facts_last_name -->
    <changeSet id="3" author="michael">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="people_facts_last_name" />
            </not>
        </preConditions>

        <createTable tableName="people_facts_last_name">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_people_facts_last_name_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence" />
            </column>
            <column name="entity_id" type="bigint">
                <constraints foreignKeyName="fk_people_facts_last_name_people"
                             referencedTableName="people"
                             referencedColumnNames="entity_id" />
            </column>
            <column name="last_name" type="text">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey tableName="people_facts_last_name" columnNames="sequence,entity_id" constraintName="pk_people_facts_last_name" />
    </changeSet>

</databaseChangeLog>