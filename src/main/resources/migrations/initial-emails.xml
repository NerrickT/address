<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!-- emails -->
    <changeSet id="1" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="emails"/>
            </not>
        </preConditions>

        <createTable tableName="emails">
            <column name="entity_id" type="bigint" autoIncrement="false">
                <constraints primaryKeyName="pk_emails"
                             primaryKey="true"
                             foreignKeyName="fk_emails_entities"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- entities_and_emails_facts_is_related -->
    <changeSet id="2" author="saem">
        <preConditions>
            <not>
                <tableExists tableName="entities_and_emails_facts_is_related"/>
            </not>
        </preConditions>

        <createTable tableName="entities_and_emails_facts_is_related">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_entities_and_emails_facts_is_related_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false"/>
            </column>
            <column name="entity_id" type="bigint">
                <constraints foreignKeyName="fk_entities_and_emails_facts_is_related_entities"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
            <column name="email_id" type="bigint">
                <constraints foreignKeyName="fk_entities_and_emails_facts_is_related_emails"
                             referencedTableName="emails"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
            <column name="is_related" type="bool" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="entities_and_emails_facts_is_related"
                       columnNames="sequence,entity_id,email_id"
                       constraintName="pk_entities_and_emails_facts_is_related"/>
    </changeSet>

    <!-- people_facts_primary_email -->
    <changeSet id="3" author="saem">
        <preConditions>
            <tableExists tableName="people"/>
            <not>
                <tableExists tableName="people_facts_primary_email"/>
            </not>
        </preConditions>

        <createTable tableName="people_facts_primary_email">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_people_facts_primary_email_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false"/>
            </column>
            <column name="entity_id" type="bigint">
                <constraints foreignKeyName="fk_people_facts_primary_email_people"
                             referencedTableName="people"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
            <column name="primary_email" type="bigint">
                <constraints nullable="true"
                             foreignKeyName="fk_people_facts_primary_email_emails"
                             referencedTableName="emails"
                             referencedColumnNames="entity_id"
                        />
            </column>
        </createTable>

        <addPrimaryKey tableName="people_facts_primary_email" columnNames="sequence,entity_id" constraintName="pk_people_facts_primary_email"/>
    </changeSet>

    <!-- emails_facts_local_part -->
    <changeSet id="4" author="michael">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="emails_facts_local_part"/>
            </not>
        </preConditions>

        <createTable tableName="emails_facts_local_part">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_emails_facts_local_part_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false"/>
            </column>
            <column name="email_id" type="bigint">
                <constraints foreignKeyName="fk_emails_facts_local_part_emails"
                             referencedTableName="emails"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
            <column name="local_part" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="emails_facts_local_part" columnNames="sequence,email_id"
                       constraintName="pk_emails_local_part"/>
    </changeSet>

    <!-- emails_facts_domain -->
    <changeSet id="5" author="michael">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="emails_facts_domain"/>
            </not>
        </preConditions>

        <createTable tableName="emails_facts_domain">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_emails_facts_domain_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false"/>
            </column>
            <column name="email_id" type="bigint">
                <constraints foreignKeyName="fk_emails_facts_domain_emails"
                             referencedTableName="emails"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
            <column name="domain" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="emails_facts_domain" columnNames="sequence,email_id"
                       constraintName="pk_emails_facts_domain"/>
    </changeSet>

    <!-- emails_facts_opted_enum -->
    <changeSet id="6" author="michael">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="emails_facts_opted_enum"/>
            </not>
        </preConditions>

        <sql>CREATE TYPE opted_enum AS ENUM ('opted','opted-out','non-opted')</sql>

        <createTable tableName="emails_facts_opted_enum">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_emails_facts_opted_enum_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false"/>
            </column>
            <column name="email_id" type="bigint">
                <constraints foreignKeyName="fk_emails_facts_opted_enum_emails"
                             referencedTableName="emails"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
            <column name="opted" type="opted_enum">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="emails_facts_opted_enum" columnNames="sequence,email_id"
                       constraintName="pk_emails_facts_opted_enum"/>
    </changeSet>
</databaseChangeLog>