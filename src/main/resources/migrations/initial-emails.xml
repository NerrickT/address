<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="emails" />
            </not>
        </preConditions>

        <createTable tableName="emails">
            <column name="entity_id" type="bigint" autoIncrement="false">
                <constraints primaryKeyName="pk_emails"
                             primaryKey="true"
                             foreignKeyName="fk_emails_entities"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="saem">
        <preConditions>
            <not>
                <columnExists tableName="people_states" columnName="primary_email"/>
            </not>
        </preConditions>

        <addColumn tableName="people_states">
            <column name="primary_email" type="bigint">
                <constraints nullable ="true"
                             foreignKeyName="fk_people_states_emails"
                             referencedTableName="emails"
                             referencedColumnNames="entity_id"
                        />
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="3" author="michael">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="email_states" />
            </not>
        </preConditions>

        <sql>CREATE TYPE opted_enum AS ENUM ('opted','opted-out','non-opted')</sql>

        <createTable tableName="email_states">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_email_states_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false" />
            </column>
            <column name="email_id" type="bigint">
                <constraints foreignKeyName="fk_email_states_emails"
                             referencedTableName="emails"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
            <column name="local_part" type="text">
                <constraints nullable="false" />
            </column>
            <column name="domain" type="text">
                <constraints nullable="false" />
            </column>
            <column name="opted" type="opted_enum">
                <constraints nullable="false" />
            </column>
            <column name="is_deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey tableName="email_states" columnNames="sequence,email_id" constraintName="pk_email_states" />
    </changeSet>

    <changeSet id="4" author="saem">
        <preConditions>
            <not>
                <tableExists tableName="entity_email_states" />
            </not>
        </preConditions>

        <createTable tableName="entity_email_states">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_entity_email_states_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false" />
            </column>
            <column name="entity_id" type="bigint">
                <constraints foreignKeyName="fk_entity_email_states_entities"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
            <column name="email_id" type="bigint">
                <constraints foreignKeyName="fk_entity_email_states_emails"
                             referencedTableName="emails"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey tableName="entity_email_states"
                       columnNames="sequence,entity_id,email_id"
                       constraintName="pk_entity_email_states" />
    </changeSet>
</databaseChangeLog>