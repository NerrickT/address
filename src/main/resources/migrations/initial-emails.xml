<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!-- emails -->
    <changeSet id="1" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="emails"/>
            </not>
        </preConditions>

        <createTable tableName="emails">
            <column name="email_id" type="bigint" autoIncrement="true">
                <constraints primaryKeyName="pk_emails"
                             primaryKey="true"/>
            </column>
            <column name="local_part" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="domain" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- emails_facts_opted_enum -->
    <changeSet id="2" author="michael">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="emails_facts_opted_enum"/>
            </not>
        </preConditions>

        <sql>CREATE TYPE opted_enum AS ENUM ('opted','opted-out','non-opted')</sql>

        <createTable tableName="emails_facts_opted_enum">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_emails_facts_opted_enum_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false"/>
            </column>
            <column name="email_id" type="bigint">
                <constraints foreignKeyName="fk_emails_facts_opted_enum_emails"
                             referencedTableName="emails"
                             referencedColumnNames="email_id"
                             nullable="false"/>
            </column>
            <column name="opted" type="opted_enum">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="emails_facts_opted_enum" columnNames="sequence,email_id"
                       constraintName="pk_emails_facts_opted_enum"/>
    </changeSet>

    <!-- entities_facts_primary_email
    <changeSet id="2" author="saem">
        <preConditions>
            <tableExists tableName="entities"/>
            <not>
                <tableExists tableName="entities_facts_primary_email"/>
            </not>
        </preConditions>

        <createTable tableName="entities_facts_primary_email">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_entities_facts_primary_email_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false"/>
            </column>
            <column name="entity_id" type="bigint">
                <constraints foreignKeyName="fk_entities_facts_primary_email_entities"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
            <column name="primary_email" type="bigint">
                <constraints nullable="true"
                             foreignKeyName="fk_entities_facts_primary_email_emails"
                             referencedTableName="emails"
                             referencedColumnNames="entity_id"
                        />
            </column>
        </createTable>

        <addPrimaryKey tableName="entities_facts_primary_email" columnNames="sequence,entity_id" constraintName="pk_entities_facts_primary_email"/>
    </changeSet>
</databaseChangeLog>