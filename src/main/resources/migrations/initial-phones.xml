<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!-- phones -->
    <changeSet id="1" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="phones"/>
            </not>
        </preConditions>

        <createTable tableName="phones">
            <column name="entity_id" type="bigint" autoIncrement="false">
                <constraints primaryKeyName="pk_phones"
                             primaryKey="true"
                             foreignKeyName="fk_phones"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <!-- people_facts_primary_phone -->
    <changeSet id="2" author="saem">
        <preConditions>
            <tableExists tableName="people"/>
            <not>
                <tableExists tableName="people_facts_primary_phone"/>
            </not>
        </preConditions>

        <createTable tableName="people_facts_primary_phone">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_people_facts_primary_phone_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false"/>
            </column>
            <column name="entity_id" type="bigint">
                <constraints foreignKeyName="fk_people_facts_primary_phone_people"
                             referencedTableName="people"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
            <column name="primary_phone" type="bigint">
                <constraints nullable="true"
                             foreignKeyName="fk_people_facts_primary_phone_phones"
                             referencedTableName="phones"
                             referencedColumnNames="entity_id"
                        />
            </column>
        </createTable>

        <addPrimaryKey tableName="people_facts_primary_phone" columnNames="sequence,entity_id" constraintName="pk_people_facts_primary_phone"/>
    </changeSet>

    <!-- entities_and_phones_facts_is_related -->
    <changeSet id="3" author="saem">
        <preConditions>
            <not>
                <tableExists tableName="entities_and_phones_facts_is_related"/>
            </not>
        </preConditions>

        <createTable tableName="entities_and_phones_facts_is_related">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_entities_and_phones_facts_is_related_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false"/>
            </column>
            <column name="entity_id" type="bigint">
                <constraints foreignKeyName="fk_entities_and_phones_facts_is_related_entities"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
            <column name="address_id" type="bigint">
                <constraints foreignKeyName="fk_entities_and_phones_facts_is_related_addresses"
                             referencedTableName="phones"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
            <column name="is_related" type="bool" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="entities_and_phones_facts_is_related"
                       columnNames="sequence,entity_id,address_id"
                       constraintName="pk_entities_and_phones_facts_is_related"/>
    </changeSet>
    
    <!-- phones_facts_number -->
    <changeSet id="4" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="phones_facts_number"/>
            </not>
        </preConditions>

        <createTable tableName="phones_facts_number">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_phones_facts_number_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false" />
            </column>
            <column name="phone_id" type="bigint">
                <constraints foreignKeyName="fk_phones_facts_number_phones"
                             referencedTableName="phones"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
            <column name="number" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="phones_facts_number" columnNames="sequence,phone_id" constraintName="pk_phones_facts_number" />
    </changeSet>

    <!-- phones_facts_extension -->
    <changeSet id="5" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="phones_facts_extension"/>
            </not>
        </preConditions>

        <createTable tableName="phones_facts_extension">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_phones_facts_extension_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false" />
            </column>
            <column name="phone_id" type="bigint">
                <constraints foreignKeyName="fk_phones_facts_extension_phones"
                             referencedTableName="phones"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
            <column name="extension" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="phones_facts_extension" columnNames="sequence,phone_id" constraintName="pk_phone_facts_extension" />
    </changeSet>

    <!-- phones_facts_type -->
    <changeSet id="6" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="phones_facts_type"/>
            </not>
        </preConditions>

        <createTable tableName="phones_facts_type">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_phones_facts_type_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false" />
            </column>
            <column name="phone_id" type="bigint">
                <constraints foreignKeyName="fk_phones_facts_type_phones"
                             referencedTableName="phones"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
            <column name="type" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="phones_facts_type" columnNames="sequence,phone_id" constraintName="pk_phones_facts_type" />
    </changeSet>

    <!-- phones_facts_do_not_call -->
    <changeSet id="7" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="phones_facts_do_not_call"/>
            </not>
        </preConditions>

        <createTable tableName="phones_facts_do_not_call">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_phones_facts_do_not_call_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false" />
            </column>
            <column name="phone_id" type="bigint">
                <constraints foreignKeyName="fk_phones_facts_do_not_call_phones"
                             referencedTableName="phones"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
            <column name="do_not_call" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="phones_facts_do_not_call" columnNames="sequence,phone_id" constraintName="pk_phones_facts_do_not_call" />
    </changeSet>
</databaseChangeLog>