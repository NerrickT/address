<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="phones"/>
            </not>
        </preConditions>

        <createTable tableName="phones">
            <column name="entity_id" type="bigint" autoIncrement="false">
                <constraints primaryKeyName="pk_phones"
                             primaryKey="true"
                             foreignKeyName="fk_phones"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="saem">
        <preConditions>
            <not>
                <columnExists tableName="people_facts" columnName="primary_phone"/>
            </not>
        </preConditions>

        <addColumn tableName="people_facts">
            <column name="primary_phone" type="bigint">
                <constraints nullable="true"
                             foreignKeyName="fk_people_facts_phones"
                             referencedTableName="phones"
                             referencedColumnNames="entity_id"
                        />
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="3" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="phone_facts"/>
            </not>
        </preConditions>

        <createTable tableName="phone_facts">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_phone_facts_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false" />
            </column>
            <column name="phone_id" type="bigint">
                <constraints foreignKeyName="fk_phone_facts_phones"
                             referencedTableName="phones"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
            <column name="number" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="extension" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="do_not_call" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="is_deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey tableName="phone_facts" columnNames="sequence,phone_id" constraintName="pk_phone_facts" />
    </changeSet>

    <changeSet id="4" author="saem">
        <preConditions>
            <not>
                <tableExists tableName="entity_phone_facts" />
            </not>
        </preConditions>

        <createTable tableName="entity_phone_facts">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_entity_phone_facts_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false" />
            </column>
            <column name="entity_id" type="bigint">
                <constraints foreignKeyName="fk_entity_phone_facts_entities"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
            <column name="phone_id" type="bigint">
                <constraints foreignKeyName="fk_entity_phone_facts_phones"
                             referencedTableName="phones"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey tableName="entity_phone_facts"
                       columnNames="sequence,entity_id,phone_id"
                       constraintName="pk_entity_phone_facts" />
    </changeSet>
</databaseChangeLog>