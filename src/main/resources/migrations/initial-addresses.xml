            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_entities_and_addresses_facts_is_related_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false"/>
            </column>
            <column name="entity_id" type="bigint">
                <constraints foreignKeyName="fk_entities_and_addresses_facts_is_related_entities"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
            <column name="address_id" type="bigint">
                <constraints foreignKeyName="fk_entities_and_addresses_facts_is_related_addresses"
                             referencedTableName="addresses"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
            <column name="is_related" type="bool" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="entities_and_addresses_facts_is_related"
                       columnNames="sequence,entity_id,address_id"
                       constraintName="pk_entities_and_addresses_facts_is_related"/>
    </changeSet>

