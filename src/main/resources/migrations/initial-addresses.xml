<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="address_entities" />
            </not>
        </preConditions>

        <sql>CREATE TABLE address_entities () INHERITS (entities)</sql>
        <addPrimaryKey columnNames="entity_id" tableName="address_entities" />

        <rollback>
            <dropTable tableName="address_entities" />
        </rollback>
    </changeSet>

    <changeSet id="2" author="saem">
        <preConditions>
            <not>
                <columnExists tableName="people_states" columnName="primary_address"/>
            </not>
        </preConditions>

        <addColumn tableName="people_states">
            <column name="primary_address" type="bigint">
                <constraints nullable ="true"
                             foreignKeyName="fk_people_states_address_entities"
                             referencedTableName="address_entities"
                             referencedColumnNames="entity_id"
                        />
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="3" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="address_states" />
            </not>
        </preConditions>

        <createTable tableName="address_states">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_address_states_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false" />
            </column>
            <column name="address_id" type="bigint">
                <constraints foreignKeyName="fk_address_states_address_entities"
                             referencedTableName="address_entities"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
            <column name="country_code" type="text">
                <constraints nullable="true" />
            </column>
            <column name="address_line" type="text">
                <constraints nullable="true" />
            </column>
            <column name="administrative_area" type="text">
                <constraints nullable="true" />
            </column>
            <column name="locality" type="text">
                <constraints nullable="true" />
            </column>
            <column name="dependent_locality" type="text">
                <constraints nullable="true" />
            </column>
            <column name="postal_code" type="text">
                <constraints nullable="true" />
            </column>
            <column name="sorting_code" type="text">
                <constraints nullable="true" />
            </column>
            <column name="organization" type="text">
                <constraints nullable="true" />
            </column>
            <column name="recipient" type="text">
                <constraints nullable="true" />
            </column>
            <column name="language_code" type="text">
                <constraints nullable="true" />
            </column>
            <column name="is_deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey tableName="address_states" columnNames="sequence,address_id" constraintName="pk_address_states" />
    </changeSet>

    <changeSet id="4" author="saem">
        <preConditions>
            <not>
                <tableExists tableName="entity_address_states" />
            </not>
        </preConditions>

        <createTable tableName="entity_address_states">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_entity_address_states_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence"
                             nullable="false" />
            </column>
            <column name="entity_id" type="bigint">
                <constraints foreignKeyName="fk_entity_address_states_entities"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
            <column name="address_id" type="bigint">
                <constraints foreignKeyName="fk_entity_address_states_address_entities"
                             referencedTableName="address_entities"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey tableName="entity_address_states"
                       columnNames="sequence,entity_id,address_id"
                       constraintName="pk_entity_address_states" />
    </changeSet>
</databaseChangeLog>