    <!-- addresses -->
    <changeSet id="1" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="addresses"/>
            </not>
        </preConditions>

        <createTable tableName="addresses">
            <column name="entity_id" type="bigint" autoIncrement="false">
                <constraints primaryKeyName="pk_addresses"
                             primaryKey="true"
                             foreignKeyName="fk_addresses_entities"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false"/>
            </column>
        </createTable>
    </changeSet>

