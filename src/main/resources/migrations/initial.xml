<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        @TODO
        * Differentiate between Entities (things that vary state over time), and
            Actors, Entities that can initiate actions (maybe)
        * TUUID for sequences, assuming they're efficient
        * naming convention for primary keys and foreign keys
        * indices
        * views
    -->
    
    <changeSet id="1" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="entities" />
            </not>
        </preConditions>

        <comment>Entities are all things that change over time, and have an identity</comment>
        
        <createTable tableName="entities">
            <column name="entity_id" type="bigint" autoIncrement="true">
                <constraints primaryKeyName="pk_entities_entity_id" primaryKey="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="users" />
            </not>
        </preConditions>

        <comment>These are the authenticatable entities that can make changes (actors)</comment>
        
        <createTable tableName="users">
            <column name="entity_id" type="bigint" autoIncrement="false">
                <constraints primaryKeyName="pk_users"
                             primaryKey="true"
                             foreignKeyName="fk_users_entities"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="3" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="system" />
            </not>
        </preConditions>

        <comment>The extrinsic part of the system itself, as an entity</comment>

        <createTable tableName="system">
            <column name="entity_id" type="bigint" autoIncrement="false">
                <constraints primaryKeyName="pk_system"
                             primaryKey="true"
                             foreignKeyName="fk_system_entities"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="4" author="saem">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="system" />
        </preConditions>

        <comment>Create the system itself (extrinsic part)</comment>

        <insert tableName="entities">
            <column name="entity_id" valueComputed="nextval('entities_entity_id_seq')" />
        </insert>
        
        <insert tableName="system">
            <column name="entity_id" valueComputed="currval('entities_entity_id_seq')" />
        </insert>

        <insert tableName="users">
            <column name="entity_id" valueComputed="currval('entities_entity_id_seq')" />
        </insert>
    </changeSet>
    
    <changeSet id="5" author="saem">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="events" />
            </not>
        </preConditions>
        
        <!-- Events -->
        
        <createTable tableName="events">
            
            <!--
            There are two requirements primary for the events table:
            - They provide a valid partial order based on causality of events.
            - They are stored on disk in a total order satisfying the partial 
                order.
            -->
            
            <column name="sequence" type="bigint" autoIncrement="true">
                <constraints primaryKeyName="pk_events_sequence" primaryKey="true" />
            </column>
            <column name="event" type="text">
                <constraints nullable="false" />
            </column>
            <column name="event_version" type="int">
                <constraints nullable="false" />
            </column>
            <column name="code_version" type="text">
                <constraints nullable="false" />
            </column>
            <column name="actor" type="bigint">
                <constraints foreignKeyName="fk_events_users"
                             referencedTableName="users"
                             referencedColumnNames="entity_id"
                             nullable="false" />
            </column>
            <column name="tables_affected" type="text">
                <constraints nullable="false" />
            </column>
            <column name="when" type="datetime" defaultValueComputed="(now() at time zone 'utc')">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="6" author="michael">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="entities_facts_is_deleted" />
            </not>
        </preConditions>

        <createTable tableName="entities_facts_is_deleted">
            <column name="sequence" type="bigint">
                <constraints foreignKeyName="fk_entities_facts_is_deleted_events"
                             referencedTableName="events"
                             referencedColumnNames="sequence" />
            </column>
            <column name="entity_id" type="bigint">
                <constraints foreignKeyName="fk_entities_facts_is_deleted_people"
                             referencedTableName="entities"
                             referencedColumnNames="entity_id" />
            </column>
            <column name="is_deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey tableName="entities_facts_is_deleted" columnNames="sequence,entity_id" constraintName="pk_entities_facts_is_deleted" />
    </changeSet>

</databaseChangeLog>